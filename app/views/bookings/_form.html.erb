<div class="row">
  <div class="col-sm-4 col-sm-offset-4 booking-form">

    <%= form_for @booking || Booking.new do |f| %>
    <%= hidden_field_tag :hotel_id, @hotel.id if @hotel.present? %>

    <div class="form-group">
    <div class="booking-form-img">

      <h2>Edit Booking</h2>

    <div class="form-group">
      <%= f.label :hotel_id%>
      <%= f.select :hotel_id, Hotel.pluck(:name, :id)%>

      <%= f.label :name %>
      <%= f.text_field :name, :autofocus => true, :class => 'form-control' %>

    <div class="form-group">
    <%= f.label :checkin %>
    <%= f.datetime_select :checkin, :class => 'form-control' %>

    <div class="form-group">
    <%= f.label :checkout %>
    <%= f.datetime_select :checkout, :class => 'form-control' %>

    <div class="form-group">

    <%= f.label :room_type%>
    <%= f.text_field :room_type, :class => 'form-control' %>

    <div class="form-group">

    <%= f.label :price %>
    <%= f.text_field :price, :class => 'form-control' %>


    <div class="btn btn-default">
    <%= f.submit %>
    </div>

    <% end %>
  </div>
</div>
